[user]
    name = Rafael Quintela
    email = rafaelsq@users.noreply.github.com

[github]
    user = rafaelsq

[core]
    editor = ~/appimage/nvim.appimage
    compression = 1
[color]
    ui = true
    status = auto
    branch = auto
    diff = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    ci = commit
    st = status -s
    br = branch
    co = checkout
    df = diff
    lg = log --graph
    rh = reset --hard
    ru = remote update
    url =! bash -c 'git config --get remote.origin.url | sed -E "s/.+:\\(.+\\)\\.git$/https:\\\\/\\\\/github\\\\.com\\\\/\\\\1/g"'
[format]
    pretty = "Commit:  %C(yellow)%H%nAuthor:  %C(green)%aN <%aE>%nDate:    (%C(red)%ar%Creset) %ai%nSubject: %s%n%n%b"
[push]
    default = matching
[url "git@github.com:"]
    insteadOf = https://github.com/
[include]
    path = ~/.gitconfig_private
